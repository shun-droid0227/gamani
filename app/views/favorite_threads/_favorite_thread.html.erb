<% if chat_thread.favorited_by?(current_user) %>
  <%= link_to chat_thread_favorite_thread_path(chat_thread_id: chat_thread.id ,id: chat_thread.id), method: :delete, remote: true do %>
    <i class="fas fa-star" style = 'color: yellow;'></i>
  <% end %>
<% else %>
  <%= link_to chat_thread_favorite_threads_path(chat_thread_id: chat_thread.id), method: :post, remote: true do %>
    <i class="far fa-star"></i>
  <% end %>
<% end %>
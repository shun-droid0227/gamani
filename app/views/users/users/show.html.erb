<div class = "container">
  <div class = "row">

    <h1>user info</h1>
    <%= icon 'fas', 'home' %>
    <%= link_to 'user_edit', edit_user_path(@user) %>
    <div id = "follow_buttons">
      <%= render 'relationships/follow_button', user: @user%>
    </div>

    <h3>投稿一覧</h3>
    <% current_user.posts.each do |f| %>
      <%= f.sentence %>
      <%= f.post_comments.count %>
      <%= link_to "削除",post_path(f),method: :delete %>
    <% end %>
    
  </div><!--end of row-->
</div><!--end of container-->
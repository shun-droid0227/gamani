
<% users.each do |user|%>
  <div class = "col-xs-12 post_container">
    <div class = "col-xs-2" style = 'padding-top: 15px;padding-bottom: 15px;'>
      <%= attachment_image_tag user, :image, :fill,60,60, class: "image-circle pull-left profile-thub rounded_corners", fallback: "no_image.jpg", size:'60x60' %>
    </div>

    <div class = "col-xs-10 post_sentence" style = "padding-right: 0; padding-left: 0">

      <div class = "col-xs-12">
        <%= link_to user.name, user %>
      </div>

      <div class = "col-xs-12" style = "padding-right: 0; padding-top: 5px; padding-bottom: 5px;">
        <%= user.introduction %>
      </div>

      <div class = "col-xs-12">
        <%= user.created_at.strftime('%Y/%m/%d') %>からGamaniを利用
      </div>
      
    </div>

  </div>
<% end %>
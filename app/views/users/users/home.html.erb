<div class = "container">
  <div class = "row">

    <!-- home_button -->
    <div class = "col-xs-3">

      <div class = "col-xs-12">
        <h2>
          <%= link_to users_home_path do%>
            <%= icon 'fas', 'gamepad' %>
          <% end %>
        </h2>
      </div>

      <div class = "col-xs-12">
        <h3>
          <%= link_to users_home_path do%>
            <%= icon 'fas', 'home' %>
            HOME
          <% end %>
        </h3>
      </div>

      <div class = "col-xs-12">
        <h3>
          <%= link_to "#" do%>
            <%= icon 'fas', 'search-plus' %>
            投稿を検索
          <% end %>
        </h3>
      </div>

      <div class = "col-xs-12">
        <h3>
          <%= link_to edit_user_path(@user) do%>
            <%= icon 'far', 'id-card' %>
            プロフィール
          <% end %>
        </h3>
      </div>

    </div>

    <!--=============-->
      
    <div class = "col-xs-6 main_line">
      <div class = "col-xs-12">
        <%= form_with model: @post do |f|%>
          <%= f.text_area :sentence%>
          <%=f.submit "送信"%>
        <% end %>
      </div>

      <h3>投稿</h3>
      <% current_user.posts.each do |f| %>
        <%= link_to (f) do%>
        <%= f.sentence %>
        <%= f.post_comments.count %>
      <% end %>
        <div id="favorites_buttons_<%= f.id %>">
          <%= render 'favorites/favorite', post: f %>
        </div>
      <%= link_to "削除",post_path(f) %>
      <%= link_to "削除",post_path(f),method: :delete %>
      <% end %>
    </div>

    <div class = "col-xs-3">
    <h4>お気に入りスレッド一覧</h4>
    <%= link_to chat_threads_path do%>
      <h5>スレッド一覧へ</h5>
    <% end %>

    </div>

  </div><!--end of row-->
</div><!--end of container-->
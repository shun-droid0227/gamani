<% current_user.posts.each do |f| %>
  <div class = "col-xs-12 post_container">
    <div class = "col-xs-2" style = 'padding-top: 15px;'>
      <%= attachment_image_tag current_user, :image, :fill,60,60, class: "image-circle pull-left profile-thub rounded_corners", fallback: "no_image.jpg", size:'50x50' %>
    </div>
    <%= link_to (f) do%>
      <div class = "col-xs-10 post_sentence" style = "padding-right: 0; padding-left: 0">

        <div class = "col-xs-12">
          <%= current_user.name %>
        </div>

        <div class = "col-xs-12" style = "padding-right: 0;">
          <%= f.sentence %>
          <% f.post_images.each do |image|%>
            <%= attachment_image_tag image, :image, :fill,100,100, class: "image-circle pull-left profile-thub rounded_corners", fallback: "no_image.jpg", size:'50x50' %>
          <% end %>
        </div>
      
        <div class = "col-xs-4 post_icons">
          <%= link_to "#" do%>
            <i class="far fa-comments"></i>
            <% if f.post_comments.count != 0%>
              <%= f.post_comments.count%>コメント
            <% else %>
              コメント
            <% end %>
          <% end %>
        </div>

        <div class = "col-xs-4 post_icons">
          <div id="favorites_buttons_<%= f.id %>">
            <%= render 'favorites/favorite', post: f %>
          </div>
        </div>
        <div class = "col-xs-4 post_icons">
          <%= link_to post_path(f),method: :delete, remote: true do%>
            <i class="fas fa-trash"></i>
            削除
          <% end %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
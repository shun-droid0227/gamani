<div class = "container">
  <div class = "row">

    <h1>user info</h1>
    <%= link_to 'user_edit', edit_user_path(@user) %>

    <%= form_with model: @post do |f|%>
      <%= f.text_field :sentence%>
      <%=f.submit "送信"%>
    <% end %>

    <h3>投稿</h3>
    <% current_user.posts.each do |f| %>
      <%= link_to (f) do%>
      <%= f.sentence %>
      <%= f.post_comments.count %>
      <% end %>
      <%= link_to "削除",post_path(f),method: :delete %>
    <% end %>
    
  </div><!--end of row-->
</div><!--end of container-->
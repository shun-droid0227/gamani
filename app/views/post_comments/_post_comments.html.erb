<div class = 'row'>
  <div class = 'col-xs-12' style = 'padding-top: 15px; padding-bottom: 15px; border-bottom: solid 1px;'>
    <%= form_with model: post_comment do |f|%>
      <%= f.text_area :sentence,class: "input_post" ,style: 'border-radius: 10px;',:placeholder => "コメントを記入"%>
      <div style= 'padding-top: 10px'>
        <%= button_tag type: 'submit', class: 'btn btn-primary' do%>
        <i class="far fa-paper-plane"></i>
            コメント
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% post.post_comments.each do |f|%>
  <div class = 'row' style = 'border-bottom: solid 1px;'>
    <div class = "col-xs-2" style = 'padding-top: 15px;'>
      <%= attachment_image_tag f.post.user, :image, :fill,60,60, class: "image-circle pull-left profile-thub rounded_corners", fallback: "no_image.jpg", size:'60x60' %>
    </div>

    <div class = "col-xs-10 post_sentence" style = "padding-right: 0; padding-left: 0">

      <div class = "col-xs-12">
        <%= link_to f.post.user.name, f.post.user %>
      </div>

      <div class = "col-xs-12" style = "padding: 0px 0px 0px 0px;">
        <%= f.sentence %>
      </div>
        <% if current_user == f.user %>
          <div class = 'col-xs-12'>
            <%= link_to "削除", post_comment_path(f),method: :delete , remote: :true%>
          </div>
        <% end %>
      </div>
  </div>
<% end %>